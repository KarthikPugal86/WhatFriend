<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.wf.gu.udpchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <permission android:name="com.wf.gu.udpchat.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.wf.gu.udpchat.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name="com.wf.gu.udpchat.CheckActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wf.gu.udpchat.MainActivity" />
        <activity android:name="com.wf.gu.udpchat.Main2Activity" android:launchMode="singleTop"
            android:theme="@style/AppTheme1" />
        <activity android:name="com.wf.gu.udpchat.DetailActivity" android:parentActivityName="com.wf.gu.udpchat.Main2Activity"
            android:theme="@style/AppTheme1">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wf.gu.udpchat.Main2Activity" />
        </activity>

        <activity android:name="com.wf.gu.udpchat.DetailActivity2" android:parentActivityName="com.wf.gu.udpchat.Messages"
            android:theme="@style/AppTheme1">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.wf.gu.udpchat.Messages" />
        </activity>

        <activity android:name="com.wf.gu.udpchat.Messages" android:theme="@style/AppTheme1">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wf.gu.udpchat.Main2Activity" />
        </activity>

        <service android:name="com.wf.gu.udpchat.UDPService" android:enabled="true" android:exported="true" />

        <receiver android:name="com.wf.gu.udpchat.MyReceiver" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net." />
            </intent-filter>
        </receiver>


    </application>

</manifest>